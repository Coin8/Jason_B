<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义组合控件：设置界面Item-->
    <declare-styleable name="SettingView">
        <attr name="setting_title" format="string" />
        <attr name="setting_right_text" format="string" />
        <attr name="setting_red_dot" format="reference|boolean" />
        <attr name="setting_title_image" format="reference"/><!--箭头图片-->
    </declare-styleable>


    <declare-styleable name="SwitchButton">
        <attr name="sb_shadow_radius" format="reference|dimension"/>
        <attr name="sb_shadow_offset" format="reference|dimension"/>
        <attr name="sb_shadow_color" format="reference|color"/>
        <attr name="sb_uncheck_color" format="reference|color"/>
        <attr name="sb_checked_color" format="reference|color"/>

        <attr name="sb_border_width" format="reference|dimension"/>
        <attr name="sb_checkline_color" format="reference|color"/>
        <attr name="sb_checkline_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_color" format="reference|color"/>
        <attr name="sb_uncheckcircle_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_radius" format="reference|dimension"/>

        <attr name="sb_checked" format="reference|boolean"/>
        <attr name="sb_shadow_effect" format="reference|boolean"/>
        <attr name="sb_effect_duration" format="reference|integer"/>
        <attr name="sb_button_color" format="reference|color"/>
        <attr name="sb_show_indicator" format="reference|boolean"/>
        <attr name="sb_background" format="reference|color"/>
        <attr name="sb_enable_effect" format="reference|boolean"/>
    </declare-styleable>


    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>




    <declare-styleable name="RBaseView">

        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_radius_top_left" format="dimension" />
        <attr name="corner_radius_top_right" format="dimension" />
        <attr name="corner_radius_bottom_left" format="dimension" />
        <attr name="corner_radius_bottom_right" format="dimension" />

        <!--虚线边框宽度/间隔-->
        <attr name="border_dash_width" format="dimension" />
        <attr name="border_dash_gap" format="dimension" />

        <!--边框宽度-->
        <attr name="border_width_normal" format="dimension" />
        <attr name="border_width_pressed" format="dimension" />
        <attr name="border_width_unable" format="dimension" />

        <!--边框颜色-->
        <attr name="border_color_normal" format="color" />
        <attr name="border_color_pressed" format="color" />
        <attr name="border_color_unable" format="color" />

        <!--背景颜色-->
        <attr name="background_normal" format="color" />
        <attr name="background_pressed" format="color" />
        <attr name="background_unable" format="color" />

    </declare-styleable>

    <declare-styleable name="RTextView">

        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" />
        <attr name="corner_radius_top_left" />
        <attr name="corner_radius_top_right" />
        <attr name="corner_radius_bottom_left" />
        <attr name="corner_radius_bottom_right" />

        <!--虚线边框宽度/间隔-->
        <attr name="border_dash_width" />
        <attr name="border_dash_gap" />

        <!--边框宽度-->
        <attr name="border_width_normal" />
        <attr name="border_width_pressed" />
        <attr name="border_width_unable" />

        <!--边框颜色-->
        <attr name="border_color_normal" />
        <attr name="border_color_pressed" />
        <attr name="border_color_unable" />

        <!--背景颜色-->
        <attr name="background_normal" />
        <attr name="background_pressed" />
        <attr name="background_unable" />

        <!--文本颜色-->
        <attr name="text_color_normal" />
        <attr name="text_color_pressed" />
        <attr name="text_color_unable" />

        <!--图标资源-->
        <attr name="icon_src_normal" />
        <attr name="icon_src_pressed" />
        <attr name="icon_src_unable" />

        <!--图标、大小、位置-->
        <attr name="icon_height" />
        <attr name="icon_width" />
        <attr name="icon_direction" />

        <!--字体样式-->
        <attr name="text_typeface" />

    </declare-styleable>





</resources>