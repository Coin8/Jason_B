<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ripple_one_item_bg"
    xmlns:apps="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/title_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/setting_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/title_image"
        android:text="----"
        android:textColor="@color/setting_text_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/setting_right_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_more" />

    <TextView
        android:id="@+id/setting_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/setting_right_arrows"
        android:text="文本"
        android:textColor="@color/setting_small_text_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/setting_iv_red"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/setting_tv_right"
        android:src="@drawable/circle_red" />

</RelativeLayout>