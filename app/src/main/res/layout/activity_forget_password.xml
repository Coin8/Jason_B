<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:text="@string/b8_forget_password"
        android:textColor="@color/title_text_color"
        android:textSize="24sp"/>


    <EditText
        android:id="@+id/login_account_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:hint="@string/login_account_hint"
        android:textColorHint="#CAD7EF"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/username_icon"
        android:drawablePadding="15dp"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginTop="17dp"
        android:background="@color/lineColor"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <EditText
        android:id="@+id/login_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/register_password"
        android:textColorHint="#CAD7EF"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="15dp"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginTop="17dp"
        android:background="@color/lineColor"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>


    <EditText
        android:id="@+id/login_password_edit_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/register_password_confirm"
        android:textColorHint="#CAD7EF"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/password_icon"
        android:drawablePadding="15dp"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginTop="17dp"
        android:background="@color/lineColor"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp">
        <EditText
            android:id="@+id/verify_confirm_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/login_password_hint"
            android:textColorHint="#CAD7EF"
            android:textSize="16sp"
            android:drawableLeft="@drawable/verify_icon"
            android:drawablePadding="15dp"
            android:background="@null"/>
        <TextView
            android:id="@+id/verify_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:text="获取验证码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginTop="17dp"
        android:background="@color/lineColor"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>


    <TextView
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/feedback_btn_bg"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:text="@string/register_submit"/>

</LinearLayout>