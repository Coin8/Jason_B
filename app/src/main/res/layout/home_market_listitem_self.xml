<?xml version="1.0" encoding="utf-8"?>
<com.coin.b8.swipe.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal"
        android:background="@drawable/ripple_one_item_bg">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/exchange_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#9b9b9b"
                android:singleLine="true"
                android:ellipsize="end"
                android:includeFontPadding="false"/>

            <LinearLayout
                android:id="@+id/symbol_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/exchange_name"
                android:gravity="center">

                <TextView
                    android:id="@+id/symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exchange_name"
                    android:textColor="@color/title_text_color"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end" />
                <TextView
                    android:id="@+id/chinese_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="12sp"
                    android:textColor="#9b9b9b"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </LinearLayout>



            <TextView
                android:id="@+id/vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/symbol_layout"
                android:layout_alignLeft="@id/symbol_layout"
                android:textSize="9sp"
                android:textColor="#9b9b9b"
                android:singleLine="true"
                android:ellipsize="end"
                android:includeFontPadding="false"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="@color/title_text_color"
                android:singleLine="true"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/price"
                android:layout_below="@+id/price"
                android:textSize="10sp"
                android:textColor="#9b9b9b"
                android:singleLine="true"
                android:ellipsize="end"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/rate_str"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/corner_bg_green"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>


    <TextView
        android:id="@+id/btn_top"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:text="置顶"
        android:textColor="@color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:text="删除"
        android:textColor="@color/white"
        android:gravity="center"/>

</com.coin.b8.swipe.SwipeMenuLayout>




