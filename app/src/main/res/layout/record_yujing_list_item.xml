<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <com.coin.b8.ui.view.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            app:sb_show_indicator="false"
            app:sb_checked="true"
            app:sb_checked_color="#426ab3"
            app:sb_uncheck_color="#cad7ef"
            app:sb_shadow_radius="0dp"
            app:sb_shadow_offset="0dp"/>
        <TextView
            android:id="@+id/record_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/switch_button"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/title_text_color"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/middle_line_color"
        android:layout_marginLeft="15dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/delete_btn"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:layout_centerVertical="true"
            android:text="删除"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/delete_btn_bg"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/record_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/delete_btn"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/title_text_color"/>
    </RelativeLayout>




</LinearLayout>