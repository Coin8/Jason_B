<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checkedButton="@id/tab_market">

    <RadioButton
        android:id="@+id/tab_market"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:text="@string/home_market"
        android:textSize="@dimen/bottom_text_size"
        android:textColor="@drawable/bottom_tab_text_color"
        android:drawableTop="@drawable/home_market_selector"
        android:background="@color/white"/>
    <RadioButton
        android:id="@+id/tab_dynamic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:text="@string/home_dynamic"
        android:textSize="@dimen/bottom_text_size"
        android:textColor="@drawable/bottom_tab_text_color"
        android:drawableTop="@drawable/home_market_selector"
        android:background="@color/white"/>
    <RadioButton
        android:id="@+id/tab_select_coin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:text="@string/home_select_coin"
        android:textSize="@dimen/bottom_text_size"
        android:textColor="@drawable/bottom_tab_text_color"
        android:drawableTop="@drawable/home_market_selector"
        android:background="@color/white"/>
    <RadioButton
        android:id="@+id/tab_mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"
        android:text="@string/home_mine"
        android:textSize="@dimen/bottom_text_size"
        android:textColor="@drawable/bottom_tab_text_color"
        android:drawableTop="@drawable/home_market_selector"
        android:background="@color/white"/>
</RadioGroup>