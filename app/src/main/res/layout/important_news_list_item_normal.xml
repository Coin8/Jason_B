<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/ripple_one_item_bg">

    <ImageView
        android:id="@+id/collect_image"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/share_smal_icon"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/collect_image"
        android:layout_alignTop="@id/collect_image"
        android:maxLines="2"
        android:textColor="@color/import_news_selector"
        android:textSize="16sp"
        android:lineSpacingExtra="10dp"
        android:ellipsize="end"
        android:includeFontPadding="false"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/collect_image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#728bae"
            android:textSize="12sp"
            android:text="分享"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/share_image"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:padding="1dp"
            android:src="@drawable/icon_details_share"
            android:layout_toLeftOf="@id/share_btn"
            android:layout_marginRight="4dp"
            android:layout_alignBottom="@id/share_btn"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/share_image"
            android:singleLine="true"
            android:textColor="#728bae"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginLeft="15dp"
        android:background="@color/lineColor"/>

</RelativeLayout>